   
unit_w = input("Is your weight in kilograms or pounds? Please enter k or p: ")
if unit_w == "p" or unit_w == "k":
    weight = float(input("Please enter your weight: "))
    if unit_w == "p":
        weight *= 0.453592
    elif unit_w == "k":
        weight = weight
    unit_h = input("Is your height in metres or feet? Please enter m or f: ")
    if unit_h == "m" or unit_h == "f":
        height = float(input("Please enter your height: "))
        if unit_h == "f":
            unit_h *= 0.3048
        elif unit_h == "m":
            height = height
        bmi = weight/(height**2)
        print("\nYour body mass index (BMI) is", bmi)
        if bmi<16:
            print("Severe Thinness")
        elif bmi<17:
            print("Moderate Thinness")
        elif bmi<18.5:
            print("Mild Thinness")
        elif bmi<25:
            print("Normal")
        elif bmi<30:
            print("Overweight")
        elif bmi<35:
            print("Obese Class I")
        elif bmi<40:
            print("Obese Class II")
        else:
            print("Obese Class III")
    else:
        print("Please try again, thank you.")
else:
    print("Please try again, thank you.")
